@model IEnumerable<PortfolioSiteAPI.Data.Project>

@{
    ViewData["Title"] = "Index";
}
<div class="row" style="margin-right: 100px;margin-left: -200px;">
    <div class="col-12">
        <h1>Index</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr class="d-flex">
                    <th class="col-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="col-5">
                        @Html.DisplayNameFor(model => model.Tag_Line)
                    </th>
                    <th class="col-5">
                        @Html.DisplayNameFor(model => model.Url_Live)
                    </th>
                    <th class="col-1">
                        @Html.DisplayNameFor(model => model.Can_Show)
                    </th>
                    <th class="col-2"> Actions </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="d-flex">
                        <td class="col-2">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="col-5">
                            @Html.DisplayFor(modelItem => item.Tag_Line)
                        </td>
                        <td class="col-5">
                            @Html.DisplayFor(modelItem => item.Url_Live)
                        </td>
                        <td class="col-1">
                            @Html.DisplayFor(modelItem => item.Can_Show)
                        </td>

                        <td class="col-2">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-6"></div>
    </div>
</div>
